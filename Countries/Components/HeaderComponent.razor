@using Countries.StateManagement
@inject CssState CssState
@inherits ObservingComponent

<div class="@CssState.DialogCssCLass">
    <header class="header-container">
        <h2>Where in the world?</h2>

        <button class="toggle-container" @onclick="CssState.ToggleThemeSwitcher">
            <i class="fa-solid fa-moon moon-icon"></i>
            <i class="fa-regular fa-sun-bright sun-icon"></i>
            <p class="dark">Dark mode</p>
            <p class="light">Light mode</p>
        </button>
    </header>
</div>

@code
{
    protected override void OnInitialized()
    {
        CssState.Subscribe(this);
    }
}
